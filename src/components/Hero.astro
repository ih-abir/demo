---
import { Picture } from "astro:assets";

import HeaderImage from "@images/header-image.jpg";
import HeaderGradient1 from "@images/header-gradient1.png";
import HeaderGradient3 from "@images/header-gradient3.png";
---
<style>
  @keyframes riseAndFadeIn {
    from {
      opacity: 0;
      filter: blur(1px);
      transform: translateY(200px);
      visibility: hidden;
    }
    to {
      opacity: 1;
      filter: blur(0px);
      transform: translateY(0);
      visibility: visible;
    }
  }

  .sunrise-effect {
    opacity: 0;
    transform: translateY(200px);
    visibility: hidden;
    animation: riseAndFadeIn 1.5s ease-in-out forwards;
  }
  
  .animation-delay-3 {
    animation-delay: 1s;
  }

  .animation-delay-1 {
    animation-delay: 1.35s;
  }
</style>
<div 
  class:list={[
    "relative flex overflow-hidden",
    "w-full h-screen max-h-[1600px] py-[125px] lg:py-[155px]"
  ]}
>
  <div class:list={[
    "wrapper z-[50] flex flex-col md:flex-row h-fit",
    "gap-5 py-[clamp(1.25rem,-2.75rem+10vw,6.25rem)] text-white"
    ]}
  >
    <h1 
      class:list={[
        "order-2 md:order-1 flex-none font-bold",
        "leading-[110%] text-[clamp(2.5rem,1rem+3.75vw,4.375rem)]",
      ]}
    >
      Identity Music
    </h1>

    <div 
      class:list={[
        "order-1 md:order-2 flex items-center",
        "md:h-[clamp(3.438rem,0.58rem+5.952vw,5.938rem)]"
      ]}
    >
      <span class="w-[68px] h-[5px] bg-[#ff5ee1]"></span>
    </div>

    <div
      class:list={[
        "order-3 w-fit font-bold leading-[110%]",
        "text-[clamp(2.5rem,1rem+3.75vw,4.375rem)]",
      ]}
    >
      <div class="flex-none">Digital Music</div>
      Distribution
    </div>
  </div>

  <div class="absolute inset-0 z-10 w-full">
    <Picture
      class="w-full h-full object-cover"
      src={HeaderImage}
      alt="header-image"
      widths={[325, 415, 639, 767, 1023, 665, 1440, 1920]}
      sizes={[
        "(max-width: 325px) 325px, (max-width: 415px) 415px",
        "(max-width: 639px) 639px, (max-width: 767px) 767px",
        "(max-width: 1023px) 1023px, (max-width: 1440px) 1440px, 1920px",
      ].join(", ")}
      formats={["avif", "webp"]}
      loading="eager"
    />
  </div>

  <div
    class:list={[
      "sunrise-effect animation-delay-1 z-20",
      "absolute w-[45vw] sm:w-[35vw] md:w-[23vw]",
      "bottom-[130px] sm:bottom-[80px] right-[15vw]",
    ]}
  >
    <Picture
      class="w-full h-full object-cover"
      src={HeaderGradient1}
      alt="header-image"
      width={100}
      height={100}
      formats={["avif", "webp"]}
      loading="lazy"
    />
  </div>

  <div
    class:list={[
      "sunrise-effect animation-delay-3 z-20",
      "absolute w-[65vw] sm:w-[45vw] md:w-[35vw]",
      "-bottom-[clamp(3.125rem,-1.969rem+25.078vw,28.125rem)] -right-8",
    ]}
  >
    <Picture
      class="w-full h-full object-cover"
      src={HeaderGradient3}
      alt="header-image"
      width={110}
      height={110}
      formats={["avif", "webp"]}
      loading="lazy"
    />
  </div>
</div>
